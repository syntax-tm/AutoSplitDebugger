<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <Color x:Key="YellowColor">#f0e66f</Color>
    <Color x:Key="BlueColor">#2196F3</Color>
    <Color x:Key="GreenColor">#5be65b</Color>
    <Color x:Key="RedColor">#ff4e3b</Color>
    <Color x:Key="BlackColor">#000</Color>
    <Color x:Key="WhiteColor">#fff</Color>

    <SolidColorBrush x:Key="YellowBrush" Color="{StaticResource YellowColor}" po:Freeze="True" />
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource BlueColor}" po:Freeze="True" />
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}" po:Freeze="True" />
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource RedColor}" po:Freeze="True" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource BlackColor}" po:Freeze="True" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}" po:Freeze="True" />

    <!-- Controls -->
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource WhiteColor}" po:Freeze="True" />

</ResourceDictionary>