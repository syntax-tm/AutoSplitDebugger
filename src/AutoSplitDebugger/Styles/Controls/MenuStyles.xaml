<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://schemas.lepo.co/wpfui/2022/xaml">

    <Style x:Key="DefaultStatusBarItemStyle" TargetType="{x:Type StatusBarItem}">
        <Setter Property="Opacity" Value="0.6" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type StatusBarItem}" BasedOn="{StaticResource DefaultStatusBarItemStyle}">

    </Style>

</ResourceDictionary>
