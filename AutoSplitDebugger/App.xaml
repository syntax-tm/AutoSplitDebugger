<Application x:Class="AutoSplitDebugger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             ShutdownMode="OnMainWindowClose"
             Startup="App_OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Resources -->
                <ResourceDictionary Source="pack://application:,,,/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/Fonts.xaml" />
                <!-- Styles -->
                <ResourceDictionary Source="pack://application:,,,/Styles/Controls/DataGridStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/Controls/MenuStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Styles/Controls/StatusBarStyles.xaml" />
                <!-- WPF UI -->
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <dxmvvm:MessageBoxService x:Key="MessageBoxService" />
            <dxmvvm:OpenFileDialogService x:Key="OpenFileDialogService" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
