            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="SymbolIconFilled" Value="True" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </ui:UiWindow.Resources>

